<div class="col-3">
  <%= form_with(model: @blog, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, placeholder: "title", class: 'form-control'  %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit!", class: 'form-submit btn btn-primary' %>  
  </div>
</div>

        
<div class="col-9">
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, cols: 50, rows: 15, placeholder: "body", class: 'form-control' %>
    <% end %>
  </div>
</div>